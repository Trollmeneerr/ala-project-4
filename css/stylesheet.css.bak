@media only screen and (max-width: 640px) {
  .btn {
    background-color: #292929;
    color: white;
    padding: 16px;
    font-size: 24px;
    border: none;
    margin: auto;
    border-radius: 0px;
    width: 100%;
  }
  #Logo img {
    margin: 5px;
    width: 100%;
  }


  #Welcome #content{
    background-color: gray;
    
  }
  #content{
    margin-top: 15px;
    padding-top: 5px;
    padding-bottom: 5px;

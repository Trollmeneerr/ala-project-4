@media only screen and (min-width: 1600px){
*{
  padding: 0px;
}
body{
  background: #ffff;
}

.btn {
    background-color: #292929;
    color: white;
    padding: 16px;
    font-size: 24px;
    border: none;
    margin-top: 30px;
    margin-left: 5%;
    border-radius: 10px;
  }
  #Logo img {
    margin: 5px;
    height: 110px;
  }
  

  #Welcome #content{
    background-color: #292929;
    text-align: center;
  }

  a {
    text-decoration: none;
    color: white;
  }

  ul {
    
   
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #ff6a6a;
 
  }
  
  li{
      display: inline;
      float: left;
      margin-left: 2%;
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }
  #content{
    margin-top: 15px;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 5px;
    background: #cccccc;
    color: black;
    font-family: 'Oswald', sans-serif;
    font-size: large;
  }
  input{
	  max-width: 60px;
  }
  #info #content {
    padding: 10px;
    display: grid;
    grid-template-columns: auto auto;
    font-size: large;
  }
  footer {
    width: 100%;
    left: 0;
    bottom: 0;
  }
  #portrait{
  display: none;
  }
}  
